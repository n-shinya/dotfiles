set nocompatible "vi互換モードをoffに
set number "行番号表示
set nobackup "バックアップしない
set noswapfile "スワップファイルつくらない
set hlsearch "検索語を強調表示
set autoindent "インデントを自動に
set laststatus=2 "ステータスラインを常に表示する
set mouse=a "マウスを有効化
set shiftwidth=4 "自動インデントの空白の数
set softtabstop=4
set expandtab "タブを空白文字に
filetype indent plugin on "ファイルタイプ判別
syntax on "色づけ
